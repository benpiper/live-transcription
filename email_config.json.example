{
    "smtp": {
        "server": "smtp.gmail.com",
        "port": 587,
        "use_tls": true,
        "username": "your-email@gmail.com",
        "password": "your-app-password",
        "from_address": "Alert Bot <your-email@gmail.com>",
        "to_addresses": ["target-email@example.com"]
    },
    "alerts": {
        "rules": [
            {
                "id": "fire-emergency",
                "pattern": ["fire", "burning", "structure fire"],
                "match_type": "word",
                "description": "Fire emergency detected",
                "tags": ["emergency", "fire"],
                "dedup_cooldown_sec": 60,
                "enabled": false
            },
            {
                "id": "location-match",
                "pattern": "\\b(Main|Oak|Elm|Grove|Spring)\\s+(?:St|Street|Ave|Road|Ln|Lane)\\b",
                "match_type": "regex",
                "description": "Dispatch location match",
                "tags": ["location"],
                "dedup_cooldown_sec": 300,
                "enabled": true
            },
            {
                "id": "generic-keywords",
                "pattern": ["ambulance", "emergency", "police"],
                "match_type": "substring",
                "description": "Generic emergency keywords",
                "tags": ["general"],
                "dedup_cooldown_sec": 120,
                "enabled": true
            }
        ],
        "subject_prefix": "[Transcription Alert]",
        "context_count": 3,
        "attach_audio": true
    },
    "websocket": {
        "url": "ws://localhost:8000/ws"
    },
    "heartbeat": {
        "enabled": true,
        "daily_status_enabled": true,
        "daily_status_time": "09:00",
        "connection_failure_threshold_minutes": 15,
        "reconnection_failure_threshold": 3,
        "reconnection_failure_window_minutes": 30
    },
    "retry": {
        "enabled": true,
        "max_retries": 5,
        "initial_backoff_seconds": 60,
        "max_backoff_seconds": 3600,
        "backoff_multiplier": 2.0,
        "persistent_queue_path": "email_retry_queue.json",
        "max_queue_size": 100,
        "alert_on_repeated_failures": true,
        "repeated_failure_threshold": 5
    },
    "audio": {
        "buffer_seconds": 120,
        "resync_threshold_seconds": 0.5,
        "extraction_padding_seconds": 0.5
    }
}
